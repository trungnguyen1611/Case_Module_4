<%- include('./partials/header.ejs') %>
<!--====== App Content ======-->
<div class="app-content">

    <!--====== Section 1 ======-->
    <div class="u-s-p-y-60">

        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="breadcrumb">
                    <div class="breadcrumb__wrap">
                        <ul class="breadcrumb__list">
                            <li class="has-separator">

                                <a href="/">Home</a></li>
                            <li class="is-marked">

                                <a href="/admin/dashboard">Dashboard</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section 1 ======-->

    <!--====== Section 2 - LIST PRODUCT ======-->
    <div class="u-s-p-b-60">
        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="dash">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3 col-md-12">

                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div class="dash__box dash__box--shadow dash__box--bg-white dash__box--radius">
                                <h2 class="dash__h2 u-s-p-xy-20">LIST PRODUCT</h2>
                                <form action="/admin/product/create" method="get">
                                    <div class="load-more">
                                        <button class="btn btn--e-brand" type="submit">ADD PRODUCT</button>
                                    </div>
                                </form>
                                <div class="dash__table-wrap gl-scroll">
                                    <table class="dash__table">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>NAME</th>
                                            <th>CATEGORY</th>
                                            <th>DESCRIPTION</th>
                                            <th>SALE OFF</th>
                                            <th>PRICE</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <% products.forEach((value, index)=>{ %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td><%= value.name %></td>
                                                <td><%= value.category %></td>
                                                <td><%= value.description %></td>
                                                <td><%=value.sale%> %</td>
                                                <!--                                                <td>-->
                                                <!--                                                    <div class="dash__table-img-wrap">-->

                                                <!--                                                        <img class="u-img-fluid"-->
                                                <!--                                                             src="images/product/electronic/product3.jpg" alt=""></div>-->
                                                <!--                                                </td>-->
                                                <td>
                                                    <div class="dash__table-total">
                                                        <span>$ <%= value.price %></span>
                                                        <div class="dash__link dash__link--brand">
                                                            <a href="/admin/product/edit?id=<%=value._id%>">MANAGE</a>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <a class="mini-product__delete-link far fa-trash-alt"
                                                       onclick="return confirm('Are you sure you want to delete this product?')"
                                                       href="/admin/product/delete?id=<%= value._id %>"></a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 2 ======-->

    <!--====== Section 3 - LIST BILL ======-->
    <div class="u-s-p-b-60">
        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="dash">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3 col-md-12">

                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div class="dash__box dash__box--shadow dash__box--bg-white dash__box--radius">
                                <h2 class="dash__h2 u-s-p-xy-20">LIST ORDER</h2>
                                <div class="dash__table-wrap gl-scroll">
                                    <table class="dash__table">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>USER NAME</th>
                                            <th>AMOUNT PRODUCT</th>
                                            <th>DATE</th>
                                            <th>TOTAL PRICE</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <% orders.forEach((value, index)=>{ %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td><%= value.user.username %></td>
                                                <td><%= value.items.length %></td>
                                                <td><%= value.createdAt %></td>
                                                <!--                                                <td>-->
                                                <!--                                                    <div class="dash__table-img-wrap">-->

                                                <!--                                                        <img class="u-img-fluid"-->
                                                <!--                                                             src="images/product/electronic/product3.jpg" alt=""></div>-->
                                                <!--                                                </td>-->
                                                <td>
                                                    <div class="dash__table-total">
                                                        <span>$ <%= value.total %></span>
                                                        <div class="dash__link dash__link--brand">
                                                            <a href="/user/my-order/detail/?order_id=<%= value._id%>">DETAIL</a>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <a class="mini-product__delete-link far fa-trash-alt"
                                                       onclick="return confirm('Are you sure you want to delete this order?')"
                                                       href="/admin/order/delete?id=<%= value._id %>"></a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 3 ======-->

    <!--====== Section 4 - LIST ACCOUNT ======-->
    <div class="u-s-p-b-60">
        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="dash">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3 col-md-12">

                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div class="dash__box dash__box--shadow dash__box--bg-white dash__box--radius">
                                <h2 class="dash__h2 u-s-p-xy-20">LIST ACCOUNT</h2>
                                <div class="dash__table-wrap gl-scroll">
                                    <table class="dash__table">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>USER NAME</th>
                                            <th>EMAIL</th>
                                            <th>TYPE ACCOUNT</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <% accounts.forEach((value, index)=>{ %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td><%= value.username %></td>
                                                <td><%= value.email %></td>
                                                <!--                                                <td>-->
                                                <!--                                                    <div class="dash__table-img-wrap">-->

                                                <!--                                                        <img class="u-img-fluid"-->
                                                <!--                                                             src="images/product/electronic/product3.jpg" alt=""></div>-->
                                                <!--                                                </td>-->
                                                <td>
                                                    <div class="dash__table-total">
                                                        <% if(value.admin){ %>
                                                            <span>admin</span>
                                                        <% }else{ %>
                                                            <span>user</span>
                                                            <div class="dash__link dash__link--brand">
                                                                <a href="dash-manage-order.html">MANAGE</a></div>
                                                        <% } %>
                                                    </div>
                                                </td>
                                                <td>
                                                    <a class="mini-product__delete-link far fa-trash-alt"
                                                       onclick="return confirm('Are you sure you want to delete this account?')"
                                                       href="/admin/account/delete?id=<%= value._id %>"></a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 4 ======-->

</div>
<!--====== End - App Content ======-->


