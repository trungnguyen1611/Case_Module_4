<%- include('./partials/header.ejs') %>
<!--====== App Content ======-->
<div class="app-content">

    <!--====== Section 1 ======-->
    <div class="u-s-p-y-60">

        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="breadcrumb">
                    <div class="breadcrumb__wrap">
                        <ul class="breadcrumb__list">
                            <li class="has-separator">

                                <a href="/">Home</a></li>
                            <li class="is-marked">
                                <a href="/admin/dashboard">Dashboard</a></li>  /

                            <li class="is-marked">
                                <a href="/admin/product/create">Create Product</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section 1 ======-->


    <!--====== Section 2 ======-->
    <div class="u-s-p-b-60">

        <!--====== Section Intro ======-->
        <div class="section__intro u-s-m-b-60">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section__text-wrap">
                            <h1 class="section__heading u-c-secondary">CREATE AN NEW PRODUCT</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Intro ======-->


        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="row row--center">
                    <div class="col-lg-6 col-md-8 u-s-m-b-30">
                        <div class="l-f-o">
                            <div class="l-f-o__pad-box">
                                <h1 class="gl-h1">PRODUCT INFORMATION</h1>
                                <form class="l-f-o__form" method="post" action="/admin/product/create" enctype="multipart/form-data">
                                    <div class="u-s-m-b-30">

                                        <label class="gl-label" for="reg-fname">PRODUCT NAME *</label>

                                        <input class="input-text input-text--primary-style" type="text" id="reg-fname"
                                               name="name"
                                               placeholder="Product Name"></div>
                                    <div class="u-s-m-b-30">
                                        <label class="gl-label" for="reg-lname">PRICE *</label>
                                        <input class="input-text input-text--primary-style" type="number" id="reg-lname"
                                               name="price"
                                               placeholder="Price in dollars"></div>
                                    <div class="u-s-m-b-30">
                                        <label class="gl-label" for="reg-lname" id="showRate">Sale Off Rate </label>
                                        <input class="input-text input-text--primary-style form-range" type="range" min="0" max ="100"
                                               onchange="showVal(this.value)" id="saleOffRate"
                                               name="sale"
                                               placeholder="100% based"></div>

                                    <div class="gl-inline">
                                        <div class="u-s-m-b-30">
                                            <label class="gl-label" for="category">CATEGORY *</label><select
                                                    class="select-box select-box--primary-style u-w-100" id="category"
                                                    name="category">
                                                <option selected>Select</option>
                                                <%category.forEach(item=>{%>
                                                <option value="<%=item.name%>"><%=item.name%></option>
                                                <%})%>
                                            </select></div>
                                    </div>
                                    <div class="u-s-m-b-30">

                                        <label class="gl-label" for="reg-email">DESCRIPTION</label>

                                        <textarea class="input-text input-text--primary-style" type="text" id="description"
                                                  placeholder="Enter Description"
                                                  name="description"></textarea></div>
                                    <div class="u-s-m-b-30">
                                        <label class="gl-label" for="images">IMAGES *</label>
                                        <input type="file" id="images" multiple
                                               name="images" accept="images/*"></div>
                                    <div class="u-s-m-b-15">

                                        <button class="btn btn--e-transparent-brand-b-2"
                                                type="submit">CREATE</button>
                                    </div>

                                    <a class="gl-link" href="/admin/dashboard">Return to Dashboard</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 2 ======-->
</div>
<!--====== End - App Content ======-->

