<%- include('./partials/header.ejs') %>
<!--====== App Content ======-->
<div class="app-content">

    <!--====== Section 1 ======-->
    <div class="u-s-p-y-60">

        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="breadcrumb">
                    <div class="breadcrumb__wrap">
                        <ul class="breadcrumb__list">
                            <li class="has-separator">

                                <a href="/">Home</a></li>
                            <li class="is-marked">

                                <a href="/user/profile">My Account</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section 1 ======-->


    <!--====== Section 2 ======-->
    <div class="u-s-p-b-60">

        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="dash">
                <div class="container">
                    <div class="row">
                        <!--====== Dashboard Features ======-->
                        <div class="col-lg-3 col-md-12">
                            <%- include('./partials/user_side_bar_features.ejs') %>
                        </div>
                        <!--====== End - Dashboard Features ======-->

                        <div class="col-lg-9 col-md-12">
                            <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white u-s-m-b-30">
                                <div class="dash__pad-2">
                                    <h1 class="dash__h1 u-s-m-b-14">Order Details: <%= detailOrder[0]._id %></h1>

                                    <div class="m-order__list">
                                        <% detailOrder[0].items.forEach(item => {item %>
                                        <div class="m-order__get">
                                            <div class="manage-o__header u-s-m-b-30">
                                                <div class="dash-l-r">
                                                    <div>
                                                        <div class="manage-o__text-2 u-c-secondary">
                                                            Item: <%= item.name ? item.name : "unknown" %></div>
                                                        <div class="manage-o__text u-c-silver">Placed
                                                            on <%= new Date(detailOrder[0].createdAt).toLocaleDateString('en-US'); %> </div>
                                                    </div>
                                                    <div>
                                                        <div class="dash__link dash__link--brand">

                                                            <a href="dash-manage-order.html"></a></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="manage-o__description">
                                                <div class="description__container">
                                                    <div class="description__img-wrap">

                                                        <img class="u-img-fluid"
                                                             src="/images/product/electronic/product3.jpg" alt=""></div>
                                                    <div class="description-title"><%= item.description ? item.description : "unknown" %></div>
                                                </div>
                                                <div class="description__info-wrap">
                                                    <div>

                                                            <span class="manage-o__badge
                                                            <%= detailOrder[0].status === 'Confirmed' ? "badge--shipped" :
                                                                    detailOrder[0].status === 'Pending' ? "badge--processing" :
                                                                            "badge--delivered" %>"><%= detailOrder[0].status %>
                                                           </span></div>
                                                    <div>

                                                                <span class="manage-o__text-2 u-c-silver">Quantity:

                                                                    <span class="manage-o__text-2 u-c-secondary"><%= item.amount ? item.amount : "unknown" %></span></span>
                                                    </div>
                                                    <div>

                                                                <span class="manage-o__text-2 u-c-silver">Price:

                                                                    <span class="manage-o__text-2 u-c-secondary">$<%= item.price ? item.price : "unknown" %></span></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                    </div>
                                    <div>

                                    </div>
                                    <a class="gl-link" href="/user/my-order">Return to List-Order</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 2 ======-->
</div>
<!--====== End - App Content ======-->

